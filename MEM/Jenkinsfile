pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', 
                    url: 'https://github.com/lathikai15/JS_mini_proj.git'
            }
        }

        stage('Build Project') {
            steps {
                dir('MEM') {
                    echo 'No build step required for static project'
                }
            }
        }

        stage('Run Tests') {
            steps {
                echo 'No tests defined for static project'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'MEM/**', allowEmptyArchive: true
        }
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Check logs for details.'
        }
    }
}
